<h1>Add new treasure</h1>

<%= form_for @treasure do |f| %>

  <%= render partial: 'form', locals: { f: f } %>

  <%= f.submit "Create"%>
  <% if @treasure.errors.any? %>
    <div>
      <h3>Please fix these errors:</h3>
      <ul>
      <% @treasure.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<%= link_to 'Back', { action: 'index' } %>
