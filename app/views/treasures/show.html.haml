%h1= @treasure.title
%p
  %strong Owner:
  = @treasure.owner.try(:first_name)
  %br/
  %strong Type:
  = @treasure.type.try(:name)
  %br/
  %strong Trashed:
  = @treasure.trashed
  %br/
  %strong Description:
  = @treasure.description
  %br/
  %strong Special note:
  = @treasure.special_note
  %br/
%hr/
= link_to 'Back', { action: 'index' }
= link_to 'Edit', { action: 'edit' }
= link_to 'Delete', @treasure, method: :delete, data: { confirm: 'Are you sure?' }
