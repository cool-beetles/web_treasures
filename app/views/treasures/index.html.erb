<h1>List of treasures:</h1>

<% if @treasures.blank? %>
  <p>There are not any treasures currently in the system.</p>
<% else %>
  <ul>
    <% @treasures.each do |t| %>
      <li><%= link_to t.title, t%>
      <%= link_to t.type.name, t %> </li>
    <% end %>
  </ul>
<% end %>

<p><%= link_to 'Add new treasure', { action: 'new' } %></p>
<p><%= link_to 'Trashed treasures', { action: 'trash' } %></p>
